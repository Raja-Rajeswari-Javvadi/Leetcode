class Solution:
    def largestPerimeter(self, nums: List[int]) -> int:
        nums.sort(reverse=True)  # Sort in descending order

        for i in range(len(nums) - 2):
            # Check the triangle inequality for the current triplet (nums[i], nums[i+1], nums[i+2])
            # Since the array is sorted in descending order, nums[i] is the largest side,
            # and nums[i+1] and nums[i+2] are the two smaller sides.
            if nums[i+1] + nums[i+2] > nums[i]:
                return nums[i] + nums[i+1] + nums[i+2]
        
        return 0 # No valid triangle found
