class Solution:
    def hasIncreasingSubarrays(self, nums: list[int], k: int) -> bool:
        increasing = 1  # Current strictly increasing subarray length
        prevIncreasing = 0  # Length of the previous strictly increasing subarray

        for i in range(1, len(nums)):
            if nums[i] > nums[i - 1]:
                increasing += 1
            else:
                prevIncreasing = increasing
                increasing = 1

            # Check if we found two adjacent increasing subarrays of length k
            # Case 1: The current and previous increasing sequences are both at least k
            # Case 2: A single increasing sequence is long enough to contain two adjacent subarrays of length k
            if (increasing >= k and prevIncreasing >= k) or increasing >= 2 * k:
                return True
        
        # After the loop, a final check for the last sequence if it's long enough
        if increasing >= 2 * k:
            return True

        return False
