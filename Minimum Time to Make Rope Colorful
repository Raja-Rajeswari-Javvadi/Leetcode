class Solution:
    def minCost(self, colors: str, neededTime: list[int]) -> int:
        ans = 0
        # Initialize maxNeededTime with the time of the first balloon
        # as it's the first balloon in its potential group.
        maxNeededTime = neededTime[0] 

        # Iterate from the second balloon
        for i in range(1, len(colors)):
            if colors[i] == colors[i - 1]:
                # If current balloon is same color as previous, 
                # we must remove one. Remove the one with less time.
                ans += min(maxNeededTime, neededTime[i])
                # Update maxNeededTime for the current group
                maxNeededTime = max(maxNeededTime, neededTime[i])
            else:
                # If current balloon is different, start a new group.
                # The current balloon becomes the new maxNeededTime for its group.
                maxNeededTime = neededTime[i]
        
        return ans
