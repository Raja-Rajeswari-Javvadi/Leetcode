class Solution:
    def numberOfBeams(self, bank: list[str]) -> int:
        total_beams = 0
        prev_row_devices = 0

        for row in bank:
            current_row_devices = row.count('1')  # Count '1's in the current row

            if current_row_devices > 0:
                # If there were devices in a previous row, calculate beams
                if prev_row_devices > 0:
                    total_beams += prev_row_devices * current_row_devices
                # Update prev_row_devices for the next iteration
                prev_row_devices = current_row_devices
        
        return total_beams
